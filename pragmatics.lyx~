df$Excess_Return=df$Gross_Return-bench 
\end_layout

\begin_layout Plain Layout

df$Excess_Return[df$Excess_Return<=0]=NA 
\end_layout

\begin_layout Plain Layout

df$Slice_to_GP=pmin(1,df$Fee/df$Excess_Return) 
\end_layout

