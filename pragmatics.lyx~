\end_layout

\end_inset

% and the investor has received a net return of 
\begin_inset ERT
status open

\begin_layout Plain Layout


\backslash
Sexpr{round(100*(-1+((capital+pref+(.5*x))/100)),1)}
\end_layout

\end_inset

%.
\end_layout

\begin_layout Subsubsection
level 4 -- parri passu
\end_layout

\begin_layout Standard
Remaining cash is distributed 80/20.
 Suppose the asset is sold for $130.
\end_layout

\begin_layout Standard
